import dash
import dash_core_components as dcc
import dash_html_components as html
import pandas as pd
import plotly.express as px
import numpy as np

covidData = pd.read_csv("https://raw.githubusercontent.com/owid/covid-19-data/master/public/data/owid-covid-data.csv")
covidData_mask = covidData['iso_code'] != 'OWID_WRL'
filtered_covidData = covidData[covidData_mask]
filtered_covidData.replace('', np.nan, inplace=True)


fig = px.scatter_matrix(filtered_covidData,
    dimensions=["total_cases", "new_cases", "hosp_patients", "new_vaccinations"],
    color="continent")
fig.show()
